/*
 * Totem Split Keyboard Layout
 * Inspired by GEIGEIGEIST's ZMK config
 *
 * Top    ╭────┬────┬────┬────┬────┬────╮      ╭────┬────┬────┬────┬────┬────╮
 *        │LT5 │LT4 │LT3 │LT2 │LT1 │LT0 │      │RT0 │RT1 │RT2 │RT3 │RT4 │RT5 │
 * Middle │LM5 │LM4 │LM3 │LM2 │LM1 │LM0 │      │RM0 │RM1 │RM2 │RM3 │RM4 │RM5 │
 * Bottom │LB5 │LB4 │LB3 │LB2 │LB1 │LB0 │      │RB0 │RB1 │RB2 │RB3 │RB4 │RB5 │
 * Thumb  ╰────┴────┴────╮           ╭────┬────┬────╯      ╰────┴────┴────╯
 *                      │LF2│LF1│LF0│      │RF0│RF1│RF2│
 */

 #pragma once

 #define LT0  5
 #define LT1  4
 #define LT2  3
 #define LT3  2
 #define LT4  1
 #define LT5  0

 #define RT0  6
 #define RT1  7
 #define RT2  8
 #define RT3  9
 #define RT4 10
 #define RT5 11

 #define LM0 17
 #define LM1 16
 #define LM2 15
 #define LM3 14
 #define LM4 13
 #define LM5 12

 #define RM0 18
 #define RM1 19
 #define RM2 20
 #define RM3 21
 #define RM4 22
 #define RM5 23

 #define LB0 29
 #define LB1 28
 #define LB2 27
 #define LB3 26
 #define LB4 25
 #define LB5 24

 #define RB0 30
 #define RB1 31
 #define RB2 32
 #define RB3 33
 #define RB4 34
 #define RB5 35

 #define LF0 38
 #define LF1 37
 #define LF2 36

 #define RF0 39
 #define RF1 40
 #define RF2 41

 // All keys on the left side of the keyboard excluding thumb keys
 #define KEYS_L LT0 LT1 LT2 LT3 LT4 LT5 LM0 LM1 LM2 LM3 LM4 LM5 LB0 LB1 LB2 LB3 LB4 LB5

 // All keys on the right side of the keyboard excluding thumb keys
 #define KEYS_R RT0 RT1 RT2 RT3 RT4 RT5 RM0 RM1 RM2 RM3 RM4 RM5 RB0 RB1 RB2 RB3 RB4 RB5

 // Thumb cluster keys
 #define THUMB_L LF2 LF1 LF0
 #define THUMB_R RF0 RF1 RF2
 #define THUMBS THUMB_L THUMB_R

#include <dt-bindings/zmk/matrix_transform.h>

&kscan {
    compatible = "zmk,kscan-gpio-matrix";
    label = "KSCAN";
    row-gpios = <>;
    col-gpios = <>;
    diode-direction = "col2row";
};

/ {
    chosen {
        zmk,kscan = &kscan;
        zmk,matrix_transform = &default_transform;
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <12>;
        rows = <4>;
        map = <
            RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4) RC(0,5) RC(0,6) RC(0,7) RC(0,8) RC(0,9) RC(0,10) RC(0,11)
            RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4) RC(1,5) RC(1,6) RC(1,7) RC(1,8) RC(1,9) RC(1,10) RC(1,11)
            RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4) RC(2,5) RC(2,6) RC(2,7) RC(2,8) RC(2,9) RC(2,10) RC(2,11)
            RC(3,0) RC(3,1) RC(3,2)                         RC(3,3) RC(3,4) RC(3,5)
        >;
    };
};